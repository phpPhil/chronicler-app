{
  "name": "chronicler",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run frontend:start\" \"npm run backend:dev\"",
    "frontend:start": "npm run start --workspace=frontend",
    "frontend:test": "npm run test --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "backend:dev": "npm run dev --workspace=backend",
    "backend:start": "npm run start --workspace=backend",
    "backend:test": "npm run test --workspace=backend",
    "backend:build": "npm run build --workspace=backend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest",
    "test:frontend": "npm run test --workspace=frontend -- --watchAll=false",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "node tests/performance/benchmark.test.js",
    "test:load": "node tests/performance/load-testing.js",
    "test:all": "npm run test && npm run test:e2e && npm run test:performance",
    "lint": "concurrently \"npm run lint --workspace=frontend\" \"npm run lint --workspace=backend\"",
    "typecheck": "concurrently \"npm run typecheck --workspace=frontend\" \"npm run typecheck --workspace=backend\"",
    "build": "npm run frontend:build && npm run backend:build",
    "ci": "npm run lint && npm run typecheck && npm run test:coverage && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^9.2.0",
    "jest": "^30.0.5"
  }
}
